{
  "name": "pos-app",
  "version": "0.2.0",
  "private": true,
  "homepage": "./",
  "main": "./public/electron.js",
  "author": "emerging coders <john@doe.com>",
  "description": "POS",
  "dependencies": {
    "@fortawesome/free-regular-svg-icons": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@reduxjs/toolkit": "^1.9.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.3.5",
    "bootstrap": "^5.2.3",
    "cors": "^2.8.5",
    "electron-is-dev": "^1.2.0",
    "express": "^4.18.2",
    "nodemon": "^2.0.22",
    "react": "^18.2.0",
    "react-bootstrap": "^2.7.2",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.2.0",
    "react-scripts": "5.0.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "PORT=3006 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "concurrently -k \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3006 && electronmon .\"",
    "server":"nodemon ./server/server.js",
    "linux": "yarn build && electron-builder -l -c.extraMetadata.main=build/electron.js",
    "win": "yarn build && electron-builder -w -c.extraMetadata.main=build/electron.js"

    
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version",  
      ">0.2%",
      "not dead",
      "not op_mini all"

    ],
    "development": [
      "last 1 electron version",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "browser": {
    "crypto": false,
    "stream": false
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron": "^24.1.1",
    "electron-builder": "^23.6.0",
    "electronmon": "^2.0.2",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.electron.myapp",
    "productName": "POS",
    "files": ["build/**/*", "node_modules/**/*", "restaurant.sqlite","server/*"],
    "extraResources": ["restaurant.sqlite","server"],

    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  }


}
